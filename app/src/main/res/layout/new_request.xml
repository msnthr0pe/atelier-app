<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:text="Запись \nклиента"
        android:textColor="@color/text_or_button"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNameNewUser"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Имя"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/etSurnameNewUser"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Дата"
        android:inputType="text"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="@+id/etNameNewUser"
        app:layout_constraintTop_toBottomOf="@+id/etNameNewUser" />

    <EditText
        android:id="@+id/etPhoneNewUser"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Время"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/etSurnameNewUser"
        app:layout_constraintTop_toBottomOf="@+id/etSurnameNewUser" />

    <EditText
        android:id="@+id/etEmailNewUser"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Ваш номер телефона"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/etPhoneNewUser"
        app:layout_constraintTop_toBottomOf="@+id/etPhoneNewUser" />

    <EditText
        android:id="@+id/etPasswordNewUser"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/etEmailNewUser"
        app:layout_constraintTop_toBottomOf="@+id/etEmailNewUser" />

    <EditText
        android:id="@+id/etRetypePasswordNewUser"
        android:layout_width="334dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Описание"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/etPasswordNewUser"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordNewUser" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/etSurnameNewUser"
        app:layout_constraintEnd_toEndOf="@+id/etSurnameNewUser"
        app:layout_constraintTop_toTopOf="@+id/etSurnameNewUser"
        app:layout_constraintVertical_bias="0.466"
        app:srcCompat="@drawable/ic_calendar" />

    <Button
        android:id="@+id/btnContinueNewUser"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:text="Записать"
        app:layout_constraintStart_toStartOf="@+id/etRetypePasswordNewUser"
        app:layout_constraintTop_toBottomOf="@+id/etRetypePasswordNewUser" />
</androidx.constraintlayout.widget.ConstraintLayout>