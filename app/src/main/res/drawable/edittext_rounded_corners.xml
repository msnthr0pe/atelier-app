<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Нажат и в фокусе -->
    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="#FFF3E0"/> <!-- нежный оранжевый -->
            <corners android:radius="15dp" />
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <!-- В фокусе, не нажат -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFF3E0"/>
            <corners android:radius="15dp" />
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Не в фокусе -->
    <item>
        <shape>
            <solid android:color="#FFF8F0"/> <!-- светлее, когда не в фокусе -->
            <corners android:radius="15dp" />
            <padding
                android:left="12dp"
                android:top="10dp"
                android:right="12dp"
                android:bottom="10dp"/>
        </shape>
    </item>

</selector>
